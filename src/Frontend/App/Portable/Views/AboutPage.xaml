<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HikingPathFinder.App.Views.AboutPage">
  <StackLayout Orientation="Vertical" HorizontalOptions="Center" Margin="0,20,0,0">
    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
      <Image Source="icon.png" />
      <Label Text="{Binding Heading}" FontSize="32" />
    </StackLayout>
    <Label Text="{Binding SiteName}" FontSize="20" HorizontalOptions="Center" />
    <Label Text="{Binding VersionNumber}" FontSize="20" HorizontalOptions="Center" AutomationId="AboutVersionNumber" />
    <Button Text="Visit Hiking Path Finder Homepage"
            FontSize="20"
            HorizontalOptions="Center"
            Clicked="OnClicked_ButtonVisitWebpage"
            AutomationId="AboutVisitHomepageButton" />
    <Label Text="{Binding MainText}" FontSize="14" HorizontalOptions="Center" />
  </StackLayout>
</ContentPage>
