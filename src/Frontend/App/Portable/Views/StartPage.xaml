<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HikingPathFinder.App.Views.StartPage">
  <StackLayout Orientation="Vertical" Margin="0,20,0,0">

    <!-- quick start buttons-->
    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
      <Button Image="plan_tour.png" Text="Plan Tour" Clicked="OnClicked_ButtonPlanTour" AutomationId="PlanTourButton" />
      <Button Image="explore_map.png" Text="Explore Map" Clicked="OnClicked_ButtonExploreMap" AutomationId="ExploreMapButton" />
    </StackLayout>

  </StackLayout>
</ContentPage>
